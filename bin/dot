#!/bin/sh
package='dot'

DIR="${BASH_SOURCE%/*}"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi

print_usage() {
  echo "A simple dotfile manager to add, remove and update dotfiles"
  echo " "
  echo "$package [options]"
  echo " "
  echo "options:"
  echo "-h, --help     Show brief help"
  echo "-e, --env      Specify environment"
}
while test $# -gt 0; do
  case "$1" in
    -h|--help)
      print_usage
      exit 0
      ;;
    -e|--env)
      shift
      if test $# -gt 0; then
        env=$1
      else
        echo "No Environment specified"
        exit 1
      fi
      shift
      ;;
    *)
      break
      ;;
  esac
done
